<div class="main users_likes_container">
  <div class="container">

    <div class="users-show-info">
      <div class="user left">
        <img src="<%= "/user_images/#{@user.image_name}" %>">

        <%if @current_user.id==@user.id%>
        <div class="user-menus">
          <%=link_to("Edit","/users/#{@user.id}/edit")%>
        </div>
        <%end%>
      </div>

      <div class="user right">
        <h2><%= @user.name%></h2>
        <div class="likes">
          <li>
            <span class="fa fa-heart"></span>
            <p><%= @user.user_like %></p>
          </li>
        </div>
        <div class="about">
          <h4>About:</h4>
          <p><%= @user.aboutUser %></p>
        </div>
      </div>
    </div>

    <ul class="user-tabs">
      <li>
        <%= link_to("/users/#{@user.id}") do%>
        Post<i class="fas fa-pencil-alt"></i>
        <%end%>
      </li>
      <li class="active">
        <%= link_to("/users/#{@user.id}/likes") do%>
        Like<i class="fas fa-heart"></i>
        <%end%>
      </li>
    </ul>

    <% @likes.each do |like|%>
    <% post=Post.find_by(id: like.post_id)%>
    <div class="posts-index-item">
      <div class="posts-index-item-head">
        <div class="post-left">
          <img src="<%= "/user_images/#{post.user.image_name}" %>">
        </div>
        <div class="post-right">
          <div class="post-user-name">
            <%= link_to(post.user.name, "/users/#{post.user.id}") %>
          </div>
        </div>
      </div>
      <%= link_to(post.comment, "/posts/#{post.id}") %>
    </div>
    <%end%>

  </div>
</div>